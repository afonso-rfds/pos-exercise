{
    "version": "0.2.0", // Version of the launch configuration format
    "configurations": [ // Array of configurations for different debug setups
        {
            "name": "C++ Debug", // Name of the debug configuration
            "type": "cppdbg", // Type of debugger, 'cppdbg' for C++
            "request": "launch", // Specifies to launch the program
            "program": "${command:cmake.launchTargetPath}", // Automatically use the executable path generated by CMake
            "args": [], // Arguments to pass to the program (empty for now)
            "stopAtEntry": false, // Do not stop at the entry point of the program
            "cwd": "${workspaceFolder}", // Set the current working directory to the workspace folder
            "environment": [], // List of environment variables (none specified here)
            "externalConsole": false, // Do not use an external console for program output
            "MIMode": "gdb", // Specifies the use of GDB as the debugger
            "miDebuggerPath": "/usr/bin/gdb", // Path to the GDB executable in WSL
            "setupCommands": [ // Commands to set up the debugger
                {
                    "description": "Enable pretty-printing for gdb", // Describes the command being issued
                    "text": "-enable-pretty-printing", // GDB command to enable pretty-printing of complex data types
                    "ignoreFailures": true // Ignore failures if this command doesn't execute properly
                }
            ],
            "preLaunchTask": "", // Task to run before launching the debugger, invokes CMake to build the project
            "logging": { // Configuration for logging behavior
                "moduleLoad": false, // Do not log module loading events
                "trace": false, // Do not log trace information
                "engineLogging": false, // Do not log internal engine details
                "programOutput": true, // Show program output in the debug console
                "exceptions": false, // Do not log exceptions
                "traceResponse": false // Do not log responses from the debugger
            },
            "internalConsoleOptions": "openOnSessionStart" // Automatically open the internal debug console when debugging starts
        },
        {
            "name": "Debug Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/run_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build and Run Tests",
            "miDebuggerPath": "/usr/bin/gdb",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}